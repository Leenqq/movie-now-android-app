<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#2196F3</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#ffffff</item>
    <item name="android:colorPrimaryDark">#ffffff</item>
    <item name="android:statusBarColor">@color/colorDark</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#FF4081</item>
    <item name="android:colorPressedHighlight">@color/colorGreyLight</item>
    <item name="android:colorFocusedHighlight">@color/colorGreyLight</item>
    <item name="android:colorActivatedHighlight">@color/colorGreyLight</item>
    <item name="android:activatedBackgroundIndicator">@color/colorGreyLight</item>
  </style>
</resources>